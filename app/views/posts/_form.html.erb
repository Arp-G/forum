<% if @post.errors.any? %>
	<%= pluralize(@post.errors.count,"error") %> prevented this post from being saved.
	<ul>
		<% @post.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>


<%= form_for @post do |f| %>
	
	<p>
		<%= f.label :title%><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :content %><br>
		<%= f.text_area :content %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>